<h4> Create New Event </h4>
<%= form_with url: user_event_path(current_user.id), scope: "event", remote: true do |form| %>    
    <table class="text-white">
        <tr>
            <td colspan="3"><%= form.label :Description %> </td>
        </tr>

        <tr>
            <td colspan="3"><%= form.text_area :remark, class:"form-control field_width", rows:"2", cols:"200", placeholder:'Enter project description here', value:nil %> </td>
        </tr>

        <tr>
            <td><br></td>
        </tr>

        <tr>
            <td><%= form.label :Event_date %> </td>
            <td width="20%"></td>
            <td><%= form.label :Event_time %> </td>    
        </tr>

        <tr>
            <td><%= form.date_field :event_date, class:"form-control field_width", min: Date.today, value:nil %> </td>
            <td></td>
            <td><%= form.time_field :event_time, class:"form-control field_width", value:nil %> </td>
        </tr>
        <td><br></td>
        <tr>
            <td colspan="3" class="text-right">
                <button type="button" class="back_btn btn btn-danger mr-2">Cancel</button>
                <%= form.submit class:"btn btn-primary", id:"create_event_btn" %>
            </td>
        </tr>
    </table>
<% end %>


<script>
    $('#event_event_date')[0].value = null
    $('#event_event_time')[0].value = null
</script>