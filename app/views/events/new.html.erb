<section class="ml-2 mr-2 w-75 m-auto">
    <h1> Create New Event </h1>
    <%= form_with url: user_event_path(current_user.id), scope: "event", local: true do |form| %>
        <table>
            <tr>
                <td> <%= form.label :Description %> </td>
                <td class="pl-3"> <%= form.text_area :remark, class:"form-control field_width", rows:"8", cols:"200" %> </td>
            </tr>
        
            <tr>
                <td> <%= form.label :Event_date %> </td>
                <td class="pl-3"> <%= form.date_field :event_date, class:"form-control field_width" %> </td>
            </tr>

            <tr>
                <td> <%= form.label :Event_time %> </td>
                <td class="pl-3"> <%= form.time_field :event_time, class:"form-control field_width" %> </td>
            </tr>

            <tr>
                <td></td>
                <td class="submit-field">
                    <%= form.submit class:"btn btn-primary" %>
                </td>
            </tr>
        </table>
    <% end %>
</section>